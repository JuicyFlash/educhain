<% content_for :title, "Messages" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="messages" class="w-[800px] h-[800px] mx-auto py-5 my-2">
    <div class="flex justify-center">
      <h1 class="font-bol text-4xl">Сообщения</h1>    
    </div>
    <div class="flex justify-center"> 
      <div class="flex-col">      
        <% if @messages.any? %>
          <% @messages.each do |message| %>
            <div class = "border-b my-2">
              <%= render message %>
              <div class="flex">
                <%= link_to "Показать сообщение", message, class: "text-sm ml-2 rounded-md hover:bg-gray-50 inline-block" %>          
              </div>
            </div>
            
          <% end %>
        <% else %>
          <p class="text-center my-10">Сообщения не найдены</p>
        <% end %>
        <div class = "px-3 my-5">
          <%= link_to "Новое сообщение", new_message_path, class: "px-3.5 py-2.5 rounded-md bg-blue-600 hover:bg-blue-500 text-white font-medium min-w-full" %>
        </div>
      </div>
    </div>
  </div>  
</div>
